with open('input_file.txt', 'r') as infile, open('output_file.txt', 'w') as outfile:
    content = infile.read()
    
    words_to_remove = ['a', 'the', 'an']
    for word in words_to_remove:
        content = content.replace(f" {word} ", " ")
    
    outfile.write(content)

print("Words removed and file created successfully.")
